<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_approval_refuse_wizard_form" model="ir.ui.view">
        <field name="name">approval.refuse.wizard.form</field>
        <field name="model">approval.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Refuse Request">
                <group>
                    <field name="request_id" invisible="1"/>
                    <field name="comment" placeholder="Please provide a reason for refusing this request..." nolabel="1"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button string="Refuse" name="action_refuse" type="object" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_approval_refuse_wizard" model="ir.actions.act_window">
        <field name="name">Refuse Request</field>
        <field name="res_model">approval.refuse.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_request_id': active_id}</field>
    </record>
</odoo>


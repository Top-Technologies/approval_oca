<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Category -->
    <record id="module_category_approvals" model="ir.module.category">
        <field name="name">Approvals</field>
        <field name="description">Approval workflow management.</field>
        <field name="sequence">10</field>
    </record>

    <!-- Security Groups -->
    <record id="group_approval_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_approvals"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="group_approval_manager" model="res.groups">
        <field name="name">Administrator</field>
        <field name="category_id" ref="module_category_approvals"/>
        <field name="implied_ids" eval="[(4, ref('group_approval_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>

    <!-- Record Rules -->
    <record id="approval_request_rule_user" model="ir.rule">
        <field name="name">Approval Request: User Access</field>
        <field name="model_id" ref="model_approval_request"/>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="domain_force">[
            '|',
            ('request_owner_id', '=', user.id),
            ('approver_ids.user_id', '=', user.id),
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="approval_request_rule_manager" model="ir.rule">
        <field name="name">Approval Request: Manager Access</field>
        <field name="model_id" ref="model_approval_request"/>
        <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="approval_category_rule_user" model="ir.rule">
        <field name="name">Approval Category: User Access</field>
        <field name="model_id" ref="model_approval_category"/>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="domain_force">[
            '|',
            ('company_id', '=', False),
            ('company_id', 'in', company_ids)
        ]</field>
    </record>

    <record id="approval_category_rule_manager" model="ir.rule">
        <field name="name">Approval Category: Manager Access</field>
        <field name="model_id" ref="model_approval_category"/>
        <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>

    <record id="approval_approver_rule_user" model="ir.rule">
        <field name="name">Approval Approver: User Access</field>
        <field name="model_id" ref="model_approval_approver"/>
        <field name="groups" eval="[(4, ref('group_approval_user'))]"/>
        <field name="domain_force">[
            '|',
            ('request_id', '=', False),
            '|',
            ('request_id.request_owner_id', '=', user.id),
            ('user_id', '=', user.id)
        ]</field>
    </record>

    <record id="approval_approver_rule_manager" model="ir.rule">
        <field name="name">Approval Approver: Manager Access</field>
        <field name="model_id" ref="model_approval_approver"/>
        <field name="groups" eval="[(4, ref('group_approval_manager'))]"/>
        <field name="domain_force">[(1, '=', 1)]</field>
    </record>
</odoo>

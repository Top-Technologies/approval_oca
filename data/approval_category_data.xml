<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence for Approval Requests -->
        <record id="sequence_approval_request" model="ir.sequence">
            <field name="name">Approval Request</field>
            <field name="code">approval.request</field>
            <field name="prefix">APP</field>
            <field name="padding">5</field>
            <field name="number_increment">1</field>
            <field name="number_next">1</field>
        </record>

        <!-- Demo Approval Categories -->
        <record id="approval_category_purchase" model="approval.category">
            <field name="name">Purchase Request</field>
            <field name="sequence">10</field>
            <field name="approval_type">manager</field>
            <field name="approval_minimum">1</field>
            <field name="approval_sequence">False</field>
            <field name="has_date">True</field>
            <field name="has_amount">True</field>
            <field name="has_reference">True</field>
            <field name="has_partner">True</field>
            <field name="description"><![CDATA[
                <p>Use this category to request approval for purchase orders.</p>
            ]]></field>
        </record>

        <record id="approval_category_leave" model="approval.category">
            <field name="name">Leave Request</field>
            <field name="sequence">20</field>
            <field name="approval_type">manager</field>
            <field name="approval_minimum">1</field>
            <field name="approval_sequence">False</field>
            <field name="has_date">True</field>
            <field name="has_period">True</field>
            <field name="description"><![CDATA[
                <p>Use this category to request approval for leave requests.</p>
            ]]></field>
        </record>

        <record id="approval_category_expense" model="approval.category">
            <field name="name">Expense Request</field>
            <field name="sequence">30</field>
            <field name="approval_type">manager</field>
            <field name="approval_minimum">1</field>
            <field name="approval_sequence">False</field>
            <field name="has_date">True</field>
            <field name="has_amount">True</field>
            <field name="has_payment_method">True</field>
            <field name="has_partner">True</field>
            <field name="description"><![CDATA[
                <p>Use this category to request approval for expense reports.</p>
            ]]></field>
        </record>
    </data>
</odoo>


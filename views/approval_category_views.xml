<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Approval Category List View -->
    <record id="view_approval_category_tree" model="ir.ui.view">
        <field name="name">approval.category.list</field>
        <field name="model">approval.category</field>
        <field name="arch" type="xml">
            <list string="Approval Categories" decoration-info="active == False">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="approval_type"/>
                <field name="approval_minimum"/>
                <field name="approval_sequence"/>
                <field name="request_count"/>
                <field name="request_to_validate_count"/>
                <field name="active" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Approval Category Form View -->
    <record id="view_approval_category_form" model="ir.ui.view">
        <field name="name">approval.category.form</field>
        <field name="model">approval.category</field>
        <field name="arch" type="xml">
            <form string="Approval Category">
                <header>
                    <button name="action_view_requests" type="object" string="Requests" class="oe_stat_button" icon="fa-list">
                        <field name="request_count" widget="statinfo" string="Requests"/>
                    </button>
                    <button name="action_view_to_validate" type="object" string="To Validate" class="oe_stat_button" icon="fa-clock-o">
                        <field name="request_to_validate_count" widget="statinfo" string="To Validate"/>
                    </button>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="e.g. Purchase Request"/>
                            <field name="sequence"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approval" name="approval">
                            <group>
                                <group string="Approval Type">
                                    <field name="approval_type"/>
                                    <field name="approval_minimum"/>
                                    <field name="approval_sequence"/>
                                    <field name="require_my_approval"/>
                                    <field name="require_employee_manager"/>
                                </group>
                                <group string="Approvers">
                                    <div class="alert alert-info" role="alert" invisible="approval_type not in ['user', 'both']">
                                        <strong>Note:</strong> At least one approver must be defined when Approval Type is "Users" or "Both".
                                    </div>
                                    <field name="approver_ids" nolabel="1" domain="[('request_id', '=', False)]" context="{'default_request_id': False, 'default_category_id': id}" required="approval_type in ['user', 'both']">
                                        <list editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="user_id" required="1"/>
                                        </list>
                                    </field>
                                </group>
                            </group>
                        </page>
                        <page string="Request Fields" name="fields">
                            <group>
                                <group string="Required Fields">
                                    <field name="has_date"/>
                                    <field name="has_period"/>
                                    <field name="has_quantity"/>
                                    <field name="has_product"/>
                                    <field name="has_amount"/>
                                    <field name="has_reference"/>
                                </group>
                                <group string="Optional Fields">
                                    <field name="has_payment_method"/>
                                    <field name="has_location"/>
                                    <field name="has_partner"/>
                                </group>
                            </group>
                        </page>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Add a description for this approval category..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Approval Category Kanban View -->
    <record id="view_approval_category_kanban" model="ir.ui.view">
        <field name="name">approval.category.kanban</field>
        <field name="model">approval.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_dashboard" default_group_by="active">
                <field name="name"/>
                <field name="active"/>
                <field name="request_count"/>
                <field name="request_to_validate_count"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title">
                                    <strong><field name="name"/></strong>
                                </div>
                            </div>
                            <div class="o_kanban_card_content">
                                <div class="row">
                                    <div class="col-6">
                                        <span>Requests</span>
                                        <strong><field name="request_count"/></strong>
                                    </div>
                                    <div class="col-6">
                                        <span>To Validate</span>
                                        <strong><field name="request_to_validate_count"/></strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Approval Category Search View -->
    <record id="view_approval_category_search" model="ir.ui.view">
        <field name="name">approval.category.search</field>
        <field name="model">approval.category</field>
        <field name="arch" type="xml">
            <search string="Approval Categories">
                <field name="name" string="Category" filter_domain="['|', ('name', 'ilike', self), ('description', 'ilike', self)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Approval Type" name="group_approval_type" context="{'group_by': 'approval_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Approval Category Action (for Categories menu) -->
    <record id="action_approval_category" model="ir.actions.act_window">
        <field name="name">Approval Categories</field>
        <field name="res_model">approval.category</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first approval category
            </p>
            <p>
                Approval categories define the workflow and requirements for different types of approval requests.
            </p>
        </field>
    </record>

    <!-- Approval Types Action (for Configuration menu - Enterprise style) -->
    <record id="action_approval_types_config" model="ir.actions.act_window">
        <field name="name">Approval Types</field>
        <field name="res_model">approval.category</field>
        <field name="view_mode">list,form,kanban</field>
        <field name="context">{'search_default_active': 1, 'create': True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first approval type
            </p>
            <p>
                Approval types define the workflow and requirements for different types of approval requests.
                Configure approvers, required fields, and approval rules for each type.
            </p>
        </field>
    </record>
</odoo>

